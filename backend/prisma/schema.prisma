generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String  @unique
  username     String   @unique
  password     String
  scores       Float[]  @default([])
  accuracy       Float[]  @default([])
  averageScore Float    @default(1)
  averageAccuracy Float    @default(1)
  totalTests   Int      @default(0)
  createdAt    DateTime @default(now())
  avatar       String   @default("https://api.dicebear.com/7.x/adventurer-neutral/svg?seed=default")
}
